{
    "compileOnSave": true,
    "compilerOptions": {
        "baseUrl": ".",
        "module": "amd",
        "moduleResolution": "node",
        "paths": {
            "dressdiscover/*": ["src/dressdiscover/*"],
            "node_modules/*": ["node_modules/*"]
        },
        "noImplicitAny": false,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noFallthroughCasesInSwitch": true,
        "noUnusedLocals": true,
        "sourceMap": true,
        "strict": true,
        "target": "es5"
    },
    "include": [
        "src/**/*"
    ]
}