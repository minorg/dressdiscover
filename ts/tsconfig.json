{
    "compileOnSave": true,
    "compilerOptions": {
        "module": "commonjs",
        "moduleResolution": "node",
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noFallthroughCasesInSwitch": true,
        "noUnusedLocals": true,
        "rootDirs": [
            "src/ts/gen",
            "src/ts/main"
        ],
        "sourceMap": true,
        "strictNullChecks": true,
        "target": "es5"
    },
    "filesGlob": [
        "**/*.ts"
    ]
}
