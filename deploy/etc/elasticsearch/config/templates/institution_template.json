{
  "institution_template": {
    "template": "institution_*", 
    "settings": {
      "analysis": {
        "analyzer": {
          "email_and_url": {
            "filter": [
              "standard", 
              "lowercase"
            ], 
            "tokenizer": "uax_url_email"
          }
        }
      }
    }, 
    "mappings": {
      "institution": {
        "_all": {
          "enabled": false
        }, 
        "dynamic": "strict", 
        "properties": {
          "5:data_rights": {
            "type": "nested", 
            "properties": {
              "1:rights": {
                "type": "nested", 
                "properties": {
                  "1:rights_holder": {
                    "type": "string"
                  }, 
                  "2:text": {
                    "type": "string"
                  }, 
                  "3:type": {
                    "index": "not_analyzed", 
                    "type": "string"
                  }, 
                  "4:notes": {
                    "type": "string"
                  }
                }
              }, 
              "2:display": {
                "type": "string"
              }, 
              "3:notes": {
                "type": "string"
              }
            }
          }, 
          "4:model_metadata": {
            "type": "nested", 
            "properties": {
              "1:ctime": {
                "type": "date"
              }, 
              "2:mtime": {
                "type": "date"
              }
            }
          }, 
          "1:title": {
            "type": "string"
          }, 
          "3:url": {
            "type": "string", 
            "analyzer": "email_and_url"
          }
        }
      }
    }
  }
}