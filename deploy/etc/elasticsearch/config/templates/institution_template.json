{
  "institution_template": {
    "template": "institution_*", 
    "settings": {
      "analysis": {
        "analyzer": {
          "email_and_url": {
            "filter": [
              "standard", 
              "lowercase"
            ], 
            "tokenizer": "uax_url_email"
          }
        }
      }
    }, 
    "mappings": {
      "institution": {
        "_all": {
          "enabled": false
        }, 
        "dynamic": "strict", 
        "properties": {
          "2:copyright_notice": {
            "type": "string"
          }, 
          "1:title": {
            "type": "string"
          }, 
          "3:url": {
            "type": "string", 
            "analyzer": "email_and_url"
          }
        }
      }
    }
  }
}