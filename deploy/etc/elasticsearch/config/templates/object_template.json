{
  "object_template": {
    "template": "object_*", 
    "settings": {
      "analysis": {
        "analyzer": {
          "email_and_url": {
            "filter": [
              "standard", 
              "lowercase"
            ], 
            "tokenizer": "uax_url_email"
          }
        }
      }
    }, 
    "mappings": {
      "object": {
        "_all": {
          "enabled": false
        }, 
        "dynamic": "strict", 
        "properties": {
          "1:collection_id": {
            "index": "not_analyzed", 
            "type": "string"
          }, 
          "2:institution_id": {
            "index": "not_analyzed", 
            "type": "string"
          }, 
          "3:title": {
            "type": "string"
          }, 
          "4:description": {
            "type": "string"
          }, 
          "5:provenance": {
            "type": "string"
          }, 
          "6:source_id": {
            "type": "string"
          }, 
          "7:summary": {
            "type": "string"
          }, 
          "8:thumbnail_url": {
            "type": "string", 
            "analyzer": "email_and_url"
          }, 
          "9:url": {
            "type": "string", 
            "analyzer": "email_and_url"
          }
        }
      }
    }
  }
}