{
  "collection_template": {
    "template": "collection_*", 
    "settings": {
      "analysis": {
        "analyzer": {
          "email_and_url": {
            "filter": [
              "standard", 
              "lowercase"
            ], 
            "tokenizer": "uax_url_email"
          }
        }
      }
    }, 
    "mappings": {
      "collection": {
        "_all": {
          "enabled": false
        }, 
        "dynamic": "strict", 
        "properties": {
          "institution_id": {
            "index": "not_analyzed", 
            "type": "string"
          }, 
          "title": {
            "type": "string"
          }
        }
      }
    }
  }
}